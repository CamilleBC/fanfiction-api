{
  "name": "fanfiction-api",
  "version": "0.0.1",
  "description": "retrieve and manage your data from fanfiction.net",
  "main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CamilleBC/fanfiction-api.git"
  },
  "keywords": [
    "ffnet",
    "fanfiction",
    "fanfiction.net",
    "fanfic"
  ],
  "author": "CamilleBC",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CamilleBC/fanfiction-api/issues"
  },
  "homepage": "https://github.com/CamilleBC/fanfiction-api#readme",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "compilerOptions": {
    "target": "ES2015",
    "module": "amd",
    "declaration": true,
    "outFile": "lib/index.js",
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.test\\.ts$"
  }
}
